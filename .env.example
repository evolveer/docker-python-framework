# Environment Configuration Template
# Copy this file to .env and modify the values as needed
# The .env file will be used by docker-compose and the deploy scripts

# Application Configuration
APP_NAME=python-app
IMAGE_NAME=python-app
IMAGE_TAG=latest
CONTAINER_NAME=python-app-container

# Server Configuration
HOST=0.0.0.0
PORT=8000
HOST_PORT=8000
DEBUG=False

# Database Configuration (if using databases)
# POSTGRES_DB=appdb
# POSTGRES_USER=appuser
# POSTGRES_PASSWORD=apppass
# DATABASE_URL=postgresql://appuser:apppass@postgres:5432/appdb

# Redis Configuration (if using Redis)
# REDIS_URL=redis://redis:6379/0

# Security (generate secure values for production)
# SECRET_KEY=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here

# External APIs (add your API keys here)
# OPENAI_API_KEY=your-openai-api-key
# STRIPE_API_KEY=your-stripe-api-key

# Logging
# LOG_LEVEL=INFO
# LOG_FORMAT=json

# Feature Flags
# ENABLE_FEATURE_X=True
# ENABLE_FEATURE_Y=False

# Performance
# WORKERS=4
# TIMEOUT=30

# Monitoring (if using monitoring services)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

